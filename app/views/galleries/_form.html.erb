<%= semantic_form_for @gallery do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :projects, :as => :select, :collection => Project.all,
                :include_blank => true, :input_html => { :multiple => true } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
