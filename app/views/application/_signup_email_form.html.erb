<%= form_tag user_preregistration_path, id: 'signup-email-form', class: 'compact-form validated-form', remote: true do %>
    <h5 class="heading">Or sign up using your email</h5>
    <div class="form-group top">
      <%= text_field_tag 'user[email]', nil, placeholder: 'email', class: 'form-control email', type: 'email' %>
    </div>
    <div class="form-group middle">
      <%= text_field_tag 'user[password]', nil, placeholder: 'password', class: 'form-control password', type: 'password' %>
    </div>
    <div class="form-group bottom">
      <%= text_field_tag 'user[password_confirmation]', nil, placeholder: 'password confirmation', class: 'form-control password-confirmation', type: 'password' %>
    </div>
<% end %>
