<%= form_tag nil, id: 'signup-email-form', class: 'compact-form validated-form' do %>
    <h5 class="heading">Or sign up using your email</h5>
    <div class="form-group">
      <%= text_field_tag 'user[email]', nil, placeholder: 'email', class: 'form-control top email', type: 'email' %>
    </div>
    <div class="form-group">
      <%= text_field_tag 'user[password]', nil, placeholder: 'password', class: 'form-control middle password', type: 'password' %>
    </div>
    <div class="form-group">
      <%= text_field_tag 'user[password_confirmation]', nil, placeholder: 'password confirmation', class: 'form-control bottom password-confirmation', type: 'password' %>
    </div>
<% end %>
