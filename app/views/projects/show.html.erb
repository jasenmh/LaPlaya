<% provide :title, @project.title %>

<!-- *****************************************************************************************************************
 BLUE WRAP
 ***************************************************************************************************************** -->
<div id="blue">
  <div class="container">
    <div class="row">
      <h3><%= @project.title %></h3>
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div><!-- /blue -->

<!-- *****************************************************************************************************************
 TITLE & CONTENT
 ***************************************************************************************************************** -->

<div class="container mt">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 centered">
      <%= image_tag @project.thumbnail, class: 'img-responsive' %>
    </div>

    <div class="col-lg-5 col-lg-offset-1">
      <div class="spacing"></div>
      <h3><%= @project.title %></h3>

      <p>
        <%= @project.about %>
      </p>
    </div>

    <div class="col-lg-4 col-lg-offset-1">
      <div class="row">
        <div class="col-lg-12">
          <div class="spacing"></div>
          <h4>Instructions</h4>

          <div class="hline"></div>
          <p>
            <%= @project.instructions %>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="spacing"></div>
          <h4>Project Details
            <%= heart_link %>
          </h4>

          <div class="hline"></div>
          <p><b>Created:</b> <%= @project.created_at %></p>

          <p><b>Last Modified:</b> <%= @project.updated_at %></p>

          <p><b>Author:</b> <%= @project.user.username %></p>

          <p><b>Hearts:</b> <%= @project.likes %></p>
        </div>
      </div>

    </div>

  </div>
  <! --/row -->
</div><! --/container -->

